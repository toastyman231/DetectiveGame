<rml>
    <head>
        <title>HUD</title>
        <link type="text/rcss" href="rml.rcss"/>
        <link type="text/rcss" href="ComponentStyles.rcss"/>
        <link type="text/rcss" href="SolutionScreen.rcss"/>
        <style>
            .offset
            {
                width: 100%;
                height: auto;
                top: 50%;
            }
            .outer
            {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
        </style>
    </head>
    <body class="body">
        <div class="panel body outer" id="outer">
            <div class="vertical-group offset margin-large" id="inner">
                <label class="margin-large nav-none" >UNTITLED DETECTIVE GAME</label>
                <button id="play" class="button-default margin-small" autofocus>Play Game</button>
                <button id="settings" class="button-default margin-small">Settings</button>
                <button id="credits" class="button-default margin-small">Credits</button>
                <button id="quit" class="button-default margin-small">Quit</button>
            </div>
        </div>
    </body>
</rml>